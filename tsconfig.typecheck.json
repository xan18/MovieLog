{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowJs": true,
    "checkJs": false,
    "jsx": "react-jsx",
    "strict": false,
    "skipLibCheck": true,
    "noEmit": true
  },
  "include": [
    "src/**/*.js",
    "src/**/*.jsx",
    "vite.config.js",
    "vitest.config.js",
    "eslint.config.js"
  ]
}
